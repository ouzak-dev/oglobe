# Environment Variables for Production Deployment
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-generate-a-long-random-string

# Mail Configuration
MAIL_SERVER=mail.privateemail.com
MAIL_PORT=465
MAIL_USERNAME=auto@example.com
MAIL_PASSWORD=your-actual-password-here
MAIL_USE_TLS=False
MAIL_USE_SSL=True
MAIL_CONTACT=contact@oglobe.ma

# Flask Environment (set to 'production' in production)
FLASK_ENV=production
